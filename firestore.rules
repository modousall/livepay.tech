rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Super admin check by email
    function isSuperAdmin() {
      return isAuthenticated() &&
        (request.auth.token.email == 'contact@livepay.tech' ||
         request.auth.token.email == 'ms@coinhub.africa');
    }
    
    // Admin or Super Admin
    function isAdminOrSuperAdmin() {
      return isAdmin() || isSuperAdmin();
    }

    function isVendorDocOwner(vendorId) {
      return isAuthenticated() && request.auth.uid == vendorId;
    }

    // Users collection
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdminOrSuperAdmin();
      allow list: if isSuperAdmin();
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update: if isOwner(userId) || isAdminOrSuperAdmin();
      allow delete: if isAdminOrSuperAdmin();
    }

    // Vendor configs
    match /vendorConfigs/{configId} {
      // Get: single document read
      allow get: if isAuthenticated() && 
        (resource.data.vendorId == request.auth.uid || isAdminOrSuperAdmin());
      // List: query operations (must be authenticated)
      allow list: if isAuthenticated() || isSuperAdmin();
      allow create: if isAuthenticated() && 
        request.resource.data.vendorId == request.auth.uid;
      allow update: if isAuthenticated() && 
        (resource.data.vendorId == request.auth.uid || isAdminOrSuperAdmin());
      allow delete: if isAdminOrSuperAdmin();
    }

    // Products
    match /products/{productId} {
      // Get: single document read (public for active, owner can read all)
      allow get: if resource.data.active == true || 
        (isAuthenticated() && resource.data.vendorId == request.auth.uid) ||
        isAdminOrSuperAdmin();
      // List: query operations (must be authenticated, code filters by vendorId)
      allow list: if isAuthenticated();
      allow create: if isAuthenticated() && 
        request.resource.data.vendorId == request.auth.uid;
      allow update: if isAuthenticated() && 
        (resource.data.vendorId == request.auth.uid || isAdminOrSuperAdmin());
      allow delete: if isAuthenticated() && 
        (resource.data.vendorId == request.auth.uid || isAdminOrSuperAdmin());
    }

    // Orders
    match /orders/{orderId} {
      // Get: single document read
      allow get: if isAuthenticated() && 
        (resource.data.vendorId == request.auth.uid || isAdminOrSuperAdmin());
      // List: query operations (must be authenticated)
      allow list: if isAuthenticated();
      allow create: if true; // Public can create orders (WhatsApp clients)
      allow update: if isAuthenticated() && 
        (resource.data.vendorId == request.auth.uid || isAdminOrSuperAdmin());
      allow delete: if isAdminOrSuperAdmin();
    }

    // Live sessions
    match /liveSessions/{sessionId} {
      // Get: single document read
      allow get: if isAuthenticated() && 
        (resource.data.vendorId == request.auth.uid || isAdminOrSuperAdmin());
      // List: query operations (must be authenticated)
      allow list: if isAuthenticated();
      allow create: if isAuthenticated() && 
        request.resource.data.vendorId == request.auth.uid;
      allow update: if isAuthenticated() && 
        (resource.data.vendorId == request.auth.uid || isAdminOrSuperAdmin());
      allow delete: if isAdminOrSuperAdmin();
    }

    // Invoices
    match /invoices/{invoiceId} {
      // Get: single document read
      allow get: if isAuthenticated() && 
        (resource.data.vendorId == request.auth.uid || isAdminOrSuperAdmin());
      // List: query operations (must be authenticated)
      allow list: if isAuthenticated();
      allow create: if isAuthenticated() && 
        request.resource.data.vendorId == request.auth.uid;
      allow update: if isAuthenticated() && 
        (resource.data.vendorId == request.auth.uid || isAdminOrSuperAdmin());
      allow delete: if isAdminOrSuperAdmin();
    }

    // Clients (CRM)
    match /clients/{clientId} {
      // Get: single document read
      allow get: if isAuthenticated() && 
        (resource.data.vendorId == request.auth.uid || isAdminOrSuperAdmin());
      // List: query operations (must be authenticated)
      allow list: if isAuthenticated();
      allow create: if isAuthenticated() && 
        request.resource.data.vendorId == request.auth.uid;
      allow update: if isAuthenticated() && 
        (resource.data.vendorId == request.auth.uid || isAdminOrSuperAdmin());
      allow delete: if isAuthenticated() && 
        (resource.data.vendorId == request.auth.uid || isAdminOrSuperAdmin());
    }

    // Appointments module
    match /appointments/{appointmentId} {
      allow get: if isAuthenticated() &&
        (resource.data.vendorId == request.auth.uid || isAdminOrSuperAdmin());
      allow list: if isAuthenticated() &&
        (resource.data.vendorId == request.auth.uid || isAdminOrSuperAdmin());
      allow create: if isAuthenticated() &&
        request.resource.data.vendorId == request.auth.uid;
      allow update: if isAuthenticated() &&
        (resource.data.vendorId == request.auth.uid || isAdminOrSuperAdmin());
      allow delete: if isAdminOrSuperAdmin();
    }

    // Queue module
    match /queueTickets/{ticketId} {
      allow get: if isAuthenticated() &&
        (resource.data.vendorId == request.auth.uid || isAdminOrSuperAdmin());
      allow list: if isAuthenticated() &&
        (resource.data.vendorId == request.auth.uid || isAdminOrSuperAdmin());
      allow create: if isAuthenticated() &&
        request.resource.data.vendorId == request.auth.uid;
      allow update: if isAuthenticated() &&
        (resource.data.vendorId == request.auth.uid || isAdminOrSuperAdmin());
      allow delete: if isAdminOrSuperAdmin();
    }

    // Ticketing module
    match /eventTickets/{eventTicketId} {
      allow get: if isAuthenticated() &&
        (resource.data.vendorId == request.auth.uid || isAdminOrSuperAdmin());
      allow list: if isAuthenticated() &&
        (resource.data.vendorId == request.auth.uid || isAdminOrSuperAdmin());
      allow create: if isAuthenticated() &&
        request.resource.data.vendorId == request.auth.uid;
      allow update: if isAuthenticated() &&
        (resource.data.vendorId == request.auth.uid || isAdminOrSuperAdmin());
      allow delete: if isAdminOrSuperAdmin();
    }

    // Interventions module
    match /serviceInterventions/{interventionId} {
      allow get: if isAuthenticated() &&
        (resource.data.vendorId == request.auth.uid || isAdminOrSuperAdmin());
      allow list: if isAuthenticated() &&
        (resource.data.vendorId == request.auth.uid || isAdminOrSuperAdmin());
      allow create: if isAuthenticated() &&
        request.resource.data.vendorId == request.auth.uid;
      allow update: if isAuthenticated() &&
        (resource.data.vendorId == request.auth.uid || isAdminOrSuperAdmin());
      allow delete: if isAdminOrSuperAdmin();
    }

    // CRM agents
    match /crmAgents/{agentId} {
      allow get: if isAuthenticated() &&
        (resource.data.vendorId == request.auth.uid || isAdminOrSuperAdmin());
      allow list: if isAuthenticated() &&
        (resource.data.vendorId == request.auth.uid || isAdminOrSuperAdmin());
      allow create: if isAuthenticated() &&
        request.resource.data.vendorId == request.auth.uid;
      allow update: if isAuthenticated() &&
        (resource.data.vendorId == request.auth.uid || isAdminOrSuperAdmin());
      allow delete: if isAdminOrSuperAdmin();
    }

    // CRM SLA policies
    match /crmSlaPolicies/{policyId} {
      allow get: if isAuthenticated() &&
        (resource.data.vendorId == request.auth.uid || isAdminOrSuperAdmin());
      allow list: if isAuthenticated() &&
        (resource.data.vendorId == request.auth.uid || isAdminOrSuperAdmin());
      allow create: if isAuthenticated() &&
        request.resource.data.vendorId == request.auth.uid;
      allow update: if isAuthenticated() &&
        (resource.data.vendorId == request.auth.uid || isAdminOrSuperAdmin());
      allow delete: if isAdminOrSuperAdmin();
    }

    // CRM tickets
    match /crmTickets/{crmTicketId} {
      allow get: if isAuthenticated() &&
        (resource.data.vendorId == request.auth.uid || isAdminOrSuperAdmin());
      allow list: if isAuthenticated() &&
        (resource.data.vendorId == request.auth.uid || isAdminOrSuperAdmin());
      allow create: if isAuthenticated() &&
        request.resource.data.vendorId == request.auth.uid;
      allow update: if isAuthenticated() &&
        (resource.data.vendorId == request.auth.uid || isAdminOrSuperAdmin());
      allow delete: if isAdminOrSuperAdmin();
    }

    // CRM ticket history
    match /crmTicketHistory/{historyId} {
      allow get: if isAuthenticated() &&
        (resource.data.vendorId == request.auth.uid || isAdminOrSuperAdmin());
      allow list: if isAuthenticated() &&
        (resource.data.vendorId == request.auth.uid || isAdminOrSuperAdmin());
      allow create: if isAuthenticated() &&
        request.resource.data.vendorId == request.auth.uid;
      allow update, delete: if isAdminOrSuperAdmin();
    }
    
    // Platform Configuration (super admin only)
    match /platformConfig/{configId} {
      allow read: if isSuperAdmin();
      allow write: if isSuperAdmin();
    }
  }
}
